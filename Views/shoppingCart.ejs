<!DOCTYPE html>
<html lang="en">
<head>
    <%- await include (Deno.cwd() + '/Views/head.ejs'); %>
</head>
<body>
    <h1>Shopping Cart</h1><br><br>
    <fieldset class="container">
        <table>
            <tr>
                <th>Product</th>
                <th>how many in total</th>
                <th>Price for one</th>
                <th>Price in total</th>
            </tr>
            <% let totalprice = 0; %> 
            <% for(let i = 0;i<list.length;i++) { %>
                <tr>
                    <td><%= list[i].productName %></td>
                    <td><%= amount[i] %></td>
                    <td><%= list[i].specialOffer %></td>
                    <td><%= (list[i].specialOffer * amount[i]).toFixed(2); %></td>
                    <% totalprice += list[i].specialOffer * amount[i] %> 
                </tr>
                <% } %>
                <tr>
                    <th>Total Price:</th>
                    <td>In Schweizer Franken</td>
                    <td></td>
                    <% totalprice = totalprice.toFixed(2) %> 
                    <th><%= totalprice %> </th>
                </tr>
        </table>
    </fieldset>
<form action="/" method="get">
    <button style="float: left;">Zur√ºck zur Startseite</button>
</form>
<form action="/payfor" method="post">
    <input type="number" name="totalprice" hidden value="<%= totalprice %>">
    <button style="float: right;">Weiter zum Kaufbildschirm</button>
</form>
</body>
</html>